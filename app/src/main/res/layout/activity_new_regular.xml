<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:fitsSystemWindows="true">

    <com.bilibili.magicasakura.widgets.TintToolbar
        android:id="@+id/toolbar"
        style="@style/Widget.App.Toolbar"
        android:layout_width="match_parent"
        android:layout_height="56dp"
        android:background="@color/theme_color_primary"
        app:elevation="4dp"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:gravity="center_vertical"
            android:paddingLeft="8dp"
            android:text="@string/app_name"
            android:textColor="@color/white"
            android:textSize="22sp" />

    </com.bilibili.magicasakura.widgets.TintToolbar>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scrollbars="none"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/toolbar">



    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_below="@+id/toolbar"
        android:layout_alignParentStart="true">



        <com.bilibili.magicasakura.widgets.TintTextView
            android:textColor="@color/theme_color_primary"
            android:text="执行日期"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/textView3"
            android:padding="10dp"
             />
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            >

            <com.bilibili.magicasakura.widgets.TintTextView
                android:textColor="@color/theme_color_primary"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="星期一 星期二 星期三 星期四 星期五"
                android:padding="10dp"
                android:id="@+id/nrdate" />
        </LinearLayout>

        <com.bilibili.magicasakura.widgets.TintView
            android:layout_height="1px"
            android:layout_width="match_parent"
            android:background="@color/theme_color_primary"
            />


        <com.bilibili.magicasakura.widgets.TintTextView
            android:textColor="@color/theme_color_primary"
            android:text="时间范围"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/textView5"
            android:padding="10dp"
            />

        <TableLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:stretchColumns="1"
            >
            <TableRow>

                <com.bilibili.magicasakura.widgets.TintTextView
                    android:textColor="@color/theme_color_primary"
                    android:text="开始时间"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/textView11"
                    android:padding="10dp"
                    />

                <com.bilibili.magicasakura.widgets.TintTextView
                    android:textColor="@color/theme_color_primary"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/nrstartTime"
                    android:text="00:00"
                    android:textAlignment="viewEnd"
                    android:padding="10dp"/>
            </TableRow>
            <TableRow>
                <com.bilibili.magicasakura.widgets.TintTextView
                    android:textColor="@color/theme_color_primary"
                    android:text="结束时间"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/textView12"
                    android:padding="10dp"
                    />

                <com.bilibili.magicasakura.widgets.TintTextView
                    android:textColor="@color/theme_color_primary"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/nrendTime"
                    android:text="23:59"
                    android:textAlignment="viewEnd"
                    android:padding="10dp"/>

            </TableRow>
        </TableLayout>

        <com.bilibili.magicasakura.widgets.TintView
            android:layout_height="1px"
            android:layout_width="match_parent"
            android:background="@color/theme_color_primary"
            />



        <TableLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:stretchColumns="0"
            >
            <TableRow>

                <com.bilibili.magicasakura.widgets.TintTextView
                    android:textColor="@color/theme_color_primary"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/textView6"
                    android:text="地理位置范围"
                    android:padding="10dp"/>

                <Switch
                    android:textColor="@color/theme_color_primary"
                    android:text="启用"
                    android:layout_width="80dp"
                    android:layout_height="wrap_content"
                    android:id="@+id/locSwitch" />

            </TableRow>
            <com.amap.api.maps2d.MapView
                xmlns:android="http://schemas.android.com/apk/res/android"
                android:id="@+id/map"
                android:layout_width="fill_parent"
                android:layout_height="160dp"
                android:padding="10dp"/>

        </TableLayout>

        <com.bilibili.magicasakura.widgets.TintView
            android:layout_height="1px"
            android:layout_width="match_parent"
            android:background="@color/theme_color_primary"
            />

        <com.bilibili.magicasakura.widgets.TintTextView
            android:textColor="@color/theme_color_primary"
            android:text="触发条件"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/textView7"
            android:padding="10dp"
            />



        <RadioGroup
            android:id="@+id/premiseRadioGrop"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <com.bilibili.magicasakura.widgets.TintRadioButton
                android:checked="true"
                android:id="@+id/npBluetooth"
                android:text = "打开蓝牙"
                android:textColor="@color/theme_color_primary"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                />
            <com.bilibili.magicasakura.widgets.TintRadioButton
                android:id="@+id/npheadphones"
                android:text = "插入耳机"
                android:textColor="@color/theme_color_primary"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />
            <com.bilibili.magicasakura.widgets.TintRadioButton
                android:id="@+id/npmissedCall"
                android:text = "未接来电"
                android:textColor="@color/theme_color_primary"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />
            <com.bilibili.magicasakura.widgets.TintRadioButton
                android:id="@+id/npcharging"
                android:text = "充电连接"
                android:textColor="@color/theme_color_primary"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />
        </RadioGroup>

        <com.bilibili.magicasakura.widgets.TintView
            android:layout_height="1px"
            android:layout_width="match_parent"
            android:background="@color/theme_color_primary"
            />


        <com.bilibili.magicasakura.widgets.TintTextView
            android:textColor="@color/theme_color_primary"
            android:text="执行行为"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/textView4"
            android:padding="10dp"
            />

        <RadioGroup
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <com.bilibili.magicasakura.widgets.TintRadioButton
                android:checked="true"
                android:id="@+id/naWiFiOn"
                android:text = "打开Wi-Fi"
                android:textColor="@color/theme_color_primary"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />
            <com.bilibili.magicasakura.widgets.TintRadioButton
                android:id="@+id/naWiFiOff"
                android:text = "关闭Wi-Fi"
                android:textColor="@color/theme_color_primary"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />
            <com.bilibili.magicasakura.widgets.TintRadioButton
                android:id="@+id/naBluetoothOn"
                android:text = "打开蓝牙"
                android:textColor="@color/theme_color_primary"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />
            <com.bilibili.magicasakura.widgets.TintRadioButton
                android:id="@+id/naBluetoothOff"
                android:text = "关闭蓝牙"
                android:textColor="@color/theme_color_primary"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />
            <com.bilibili.magicasakura.widgets.TintRadioButton
                android:id="@+id/naApplication"
                android:text = "打开应用"
                android:textColor="@color/theme_color_primary"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />
            <com.bilibili.magicasakura.widgets.TintRadioButton
                android:id="@+id/naSMS"
                android:text = "回复短信"
                android:textColor="@color/theme_color_primary"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />
            <com.bilibili.magicasakura.widgets.TintRadioButton
                android:id="@+id/namute"
                android:text = "静音模式"
                android:textColor="@color/theme_color_primary"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />
        </RadioGroup>

        <com.bilibili.magicasakura.widgets.TintView
            android:layout_height="1px"
            android:layout_width="match_parent"
            android:background="@color/theme_color_primary"
            />
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <com.bilibili.magicasakura.widgets.TintButton
                android:textColor="@color/theme_color_primary"
                android:text="取消"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/cancel_button"
                style="@style/Widget.AppCompat.Button.Borderless.Colored"
                android:elevation="0dp"
                android:padding="10dp"/>

            <com.bilibili.magicasakura.widgets.TintButton
                android:textColor="@color/theme_color_primary"
                android:text="添加"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/add_button"
                android:layout_gravity="end|right"
                style="@style/Widget.AppCompat.Button.Borderless.Colored"
                android:layout_alignParentTop="true"
                android:layout_alignParentEnd="true"
                android:padding="10dp"/>
        </RelativeLayout>



    </LinearLayout>
    </ScrollView>
</RelativeLayout>
